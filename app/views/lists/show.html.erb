<h1 class="mb-4"><%= @list.name %></h1>

<h2>Bookmarks</h2>
<div class="row">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="col-md-4 mb-4">
      <div class="card shadow-sm h-100">
        <%= image_tag bookmark.movie.poster_url, class: "card-img-top", alt: bookmark.movie.title %>
        <div class="card-body">
          <h5 class="card-title"><%= bookmark.movie.title %></h5>
          <p class="card-text"><%= bookmark.comment %></p>
          <%= link_to "Delete", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger btn-sm" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<h3 class="mt-5">Add a new bookmark</h3>
<%= form_with(model: [@list, @bookmark], local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :movie_id, "Movie" %>
    <%= form.collection_select :movie_id, Movie.all, :id, :title, {}, class: "form-select" %>
  </div>
  <div class="mb-3">
    <%= form.label :comment %>
    <%= form.text_field :comment, class: "form-control" %>
  </div>
  <%= form.submit "Add Bookmark", class: "btn btn-primary" %>
<% end %>

<h3 class="mt-5">Reviews</h3>
<% @list.reviews.each do |review| %>
  <div class="mb-2">
    <p><%= review.content %></p>
  </div>
<% end %>

<h4 class="mt-4">Add a review</h4>
<%= form_with(model: [@list, @review], local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :content %>
    <%= form.text_area :content, class: "form-control" %>
  </div>
  <%= form.submit "Submit Review", class: "btn btn-secondary" %>
<% end %>

<%= link_to "Back to all lists", lists_path, class: "btn btn-secondary mt-4" %>
